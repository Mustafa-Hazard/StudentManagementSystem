@model SMS.Models.Entities.Course

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Title" class="control-label fw-bold"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TeacherId" class="control-label fw-bold">Assign Teacher</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Course</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}