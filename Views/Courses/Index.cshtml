@model IEnumerable<SMS.Models.Entities.Course>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Course Catalog</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Course</a>
    }
</div>

<table class="table table-hover shadow-sm bg-white rounded">
    <thead class="bg-light">
        <tr>
            <th>Code</th>
            <th>Title</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.CourseCode</strong></td>
                <td>@item.Title</td>
                <td>@(item.Teacher?.User?.FullName ?? "Not Assigned")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">View</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>