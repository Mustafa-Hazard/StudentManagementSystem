@model SMS.Models.Entities.Course

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h4>Course: @Model.Title (@Model.CourseCode)</h4>
    </div>
    <div class="card-body">
        <p><strong>Instructor:</strong> @Model.Teacher?.User?.FullName</p>
        <p><strong>Credits:</strong> @Model.Credits</p>

        <h5 class="mt-4">Enrolled Students</h5>
        <ul class="list-group">
            @foreach (var enrollment in Model.Enrollments)
            {
                <li class="list-group-item">@enrollment.Student?.User?.FullName</li>
            }
        </ul>
    </div>
</div>