@model SMS.Models.Entities.Course

<div class="container mt-5">
    <div class="alert alert-danger shadow">
        <h3>Are you sure you want to delete this course?</h3>
        <p>This action cannot be undone. All enrollments for this course might be affected.</p>
        <hr>
        <dl class="row">
            <dt class="col-sm-3">Course Code</dt>
            <dd class="col-sm-9">@Model.CourseCode</dd>
            <dt class="col-sm-3">Course Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Go Back</a>
        </form>
    </div>
</div>