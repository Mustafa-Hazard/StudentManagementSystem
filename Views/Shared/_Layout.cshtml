@using Microsoft.AspNetCore.Identity
@using SMS.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NMEIS Portal</title>
    @* Bootswatch Flatly Theme & Font Awesome *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/flatly/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary shadow-sm mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                @* Role-based Brand Link *@
                <a class="navbar-brand fw-bold" asp-controller="Dashboard" asp-action="@(User.IsInRole("Student") ? "StudentIndex" : "Index")">
                    <i class="fa-solid fa-shield-halved me-2"></i>NMEIS
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        @* 🟢 SHARED LINKS (Always Visible if Authenticated) *@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="@(User.IsInRole("Student") ? "StudentIndex" : "Index")">
                                    <i class="fa-solid fa-house me-1"></i> Home
                                </a>
                            </li>

                            @* 🟡 ADMIN & TEACHER ONLY MENUS *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"><i class="fa-solid fa-users me-1"></i> Management</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Students" asp-action="Index">Students Directory</a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a class="dropdown-item" asp-controller="Teachers" asp-action="Index">Faculty Management</a>
                                        }
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Courses" asp-action="Index">Course Catalog</a>
                                    </div>
                                </li>
                            }

                            @* 🔵 STUDENT ONLY LINKS *@
                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Enrollments" asp-action="Index">
                                        <i class="fa-solid fa-award me-1"></i> My Grades
                                    </a>
                                </li>
                                <li class="nav-item">
                                    @* PDF Transcript Link *@
                                    <a class="nav-link text-warning" asp-controller="Students" asp-action="DownloadTranscript">
                                        <i class="fa-solid fa-file-pdf me-1"></i> Download Transcript
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    @* Login Partial for Identity Account Links *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-3 bg-light border-top mt-auto">
        <div class="container text-center">
            &copy; 2026 - <strong>NMEIS Student System</strong> - Designed by <b>Mustafa Muhammad Iqbal</b>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>