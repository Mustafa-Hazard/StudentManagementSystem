@model SMS.Models.ViewModels.StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Portal";
}

<div class="container py-4">
    <div class="row">
        @* Profile Card *@
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 border-top border-primary border-4">
                <div class="card-body text-center">
                    <div class="mb-3 text-primary"><i class="fa-solid fa-user-circle fa-4x"></i></div>
                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted">@Model.RegId | @Model.Department</p>
                    <hr />
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-outline-primary btn-sm">View Profile</a>
                </div>
            </div>
        </div>

        @* Quick Stats *@
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card bg-info text-white shadow border-0">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase small">Active Courses</h6>
                                <h2 class="mb-0">@Model.EnrolledCourses.Count</h2>
                            </div>
                            <i class="fa-solid fa-book-open fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card bg-success text-white shadow border-0">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase small">Transcript Status</h6>
                                <h2 class="mb-0">Ready</h2>
                            </div>
                            <i class="fa-solid fa-file-pdf fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            @* Courses Table *@
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">My Current Courses</h6>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Course Title</th>
                                <th>Credits</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.EnrolledCourses)
                            {
                                <tr>
                                    <td><strong>@item.Course.CourseCode</strong></td>
                                    <td>@item.Course.Title</td>
                                    <td>@item.Course.Credits</td>
                                    <td><span class="badge bg-light text-success border">Enrolled</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>