@model IEnumerable<SMS.Models.Entities.Attendance>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-calendar-check text-info me-2"></i> Attendance Records</h2>
        <a asp-action="Create" class="btn btn-info text-white fw-bold">Mark Attendance</a>
    </div>

    <div class="card shadow-sm border-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Student Name</th>
                    <th>Course</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">@(item.Student?.User?.FullName ?? "N/A")</td>
                        <td>@item.Course?.Title</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>
                            @if (item.IsPresent)
                            {
                                <span class="badge bg-success">Present</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Absent</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>