@model SMS.Models.Entities.Enrollment

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Unenrollment</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to remove <strong>@Model.Student?.User?.FullName</strong> from the course <strong>@Model.Course?.Title</strong>?</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Remove</button>
                <a asp-action="Index" class="btn btn-secondary">Keep Enrollment</a>
            </form>
        </div>
    </div>
</div>