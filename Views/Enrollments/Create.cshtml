@model SMS.Models.Entities.Enrollment

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow p-4 rounded bg-white border-top border-warning border-4">
            <h4 class="text-center mb-4">New Enrollment</h4>
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label fw-bold">Select Student</label>
                    <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Select Course</label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold">Date</label>
                    <input asp-for="EnrollmentDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-warning fw-bold">Confirm Enrollment</button>
                </div>
            </form>
        </div>
    </div>
</div>