@model SMS.Models.Entities.Enrollment

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 shadow p-4 rounded bg-white">
            <h4 class="text-center">Update Marks</h4>
            <p class="text-center text-muted">@Model.Student?.User?.FullName - @Model.Course?.Title</p>
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="CourseId" />

                <div class="mb-4 text-center">
                    <label class="form-label h5">Enter Marks (0-100)</label>
                    <input asp-for="Marks" type="number" class="form-control form-control-lg text-center" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark">Save Result</button>
                    <a asp-action="Index" class="btn btn-light border">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>