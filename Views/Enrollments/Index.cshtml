@model IEnumerable<SMS.Models.Entities.Enrollment>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-file-signature text-warning me-2"></i> Course Enrollments</h2>
        <a asp-action="Create" class="btn btn-warning fw-bold text-dark">Enroll New Student</a>
    </div>

    <div class="card shadow-sm border-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Student</th>
                    <th>Course</th>
                    <th>Marks</th>
                    <th>Grade</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">@(item.Student?.User?.FullName ?? "Unknown")</td>
                        <td>@item.Course?.Title</td>
                        <td>@(item.Marks?.ToString() ?? "N/A")</td>
                        <td><b class="text-primary">@item.Grade</b></td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Add Marks</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>