@model IEnumerable<SMS.Models.Entities.Teacher>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-chalkboard-user text-primary me-2"></i> Faculty Directory</h2>
        <a asp-action="Create" class="btn btn-primary fw-bold"><i class="fa-solid fa-user-plus me-1"></i> Add Teacher</a>
    </div>

    <div class="card shadow-sm border-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Teacher Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">@(item.User?.FullName ?? "N/A")</td>
                        <td><span class="badge bg-info text-dark">@item.Department</span></td>
                        <td>@item.User?.Email</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>