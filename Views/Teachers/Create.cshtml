@model SMS.Models.Entities.Teacher

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow p-4 rounded bg-white border-top border-primary border-4">
            <h4 class="text-center mb-4">Register New Teacher</h4>
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name</label>
                    <input name="FullName" class="form-control" placeholder="e.g. Dr. Mustafa Iqbal" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input name="Email" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Department" class="form-label fw-bold"></label>
                    <input asp-for="Department" class="form-control" placeholder="Computer Science" />
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold">Login Password</label>
                    <input name="Password" type="password" class="form-control" required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary fw-bold">Save Teacher</button>
                    <a asp-action="Index" class="btn btn-light border">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>