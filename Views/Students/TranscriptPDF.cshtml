@model SMS.Models.ViewModels.TranscriptViewModel

@{
    Layout = null; // Transcript ke liye humein main layout nahi chahiye
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 30px;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        .student-info {
            margin-top: 20px;
            width: 100%;
        }

            .student-info td {
                padding: 5px;
                font-size: 14px;
            }

        table.result-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

            table.result-table th, table.result-table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
            }

            table.result-table th {
                background-color: #f2f2f2;
            }

        .footer {
            margin-top: 50px;
            font-size: 12px;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>NMEIS - Official Transcript</h1>
        <p>Project: QUIZ B | Managed by Mustafa Muhammad Iqbal</p>
    </div>

    <table class="student-info">
        <tr>
            <td><strong>Student Name:</strong> @Model.Student.User.FullName</td>
            <td><strong>Reg No:</strong> @Model.Student.StudentRegId</td>
        </tr>
        <tr>
            <td><strong>Department:</strong> @Model.Student.Department</td>
            <td><strong>Date:</strong> @DateTime.Now.ToString("dd MMM yyyy")</td>
        </tr>
    </table>

    <table class="result-table">
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Title</th>
                <th>Credit Hours</th>
                <th>Marks/Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>@item.Course.CourseCode</td>
                    <td>@item.Course.Title</td>
                    <td>@item.Course.Credits</td>
                    <td>@(item.Marks?.ToString() ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer">
        <h3>Final Average/GPA: @Model.TotalGPA.ToString("F2")</h3>
        <br /><br />
        <p>_______________________</p>
        <p>Controller of Examinations</p>
    </div>
</body>
</html>