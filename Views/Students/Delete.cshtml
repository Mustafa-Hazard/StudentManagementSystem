@model SMS.Models.Entities.Student

<div class="container mt-5">
    <div class="alert alert-danger shadow-lg border-0 p-4 rounded text-center">
        <i class="fa-solid fa-triangle-exclamation fa-4x mb-3"></i>
        <h3>Are you sure you want to delete this student?</h3>
        <p class="mb-4">This will permanently remove the record for <strong>@Model.User?.FullName</strong> and their account.</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg px-5">Yes, Delete Record</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5">No, Go Back</a>
        </form>
    </div>
</div>